@model IEnumerable<testLogin.Models.Restaurant>


@{
    ViewBag.Title = "Index";
}
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#createButton').click(function () {
                if (document.getElementById("editButton") != null) {
                    $('#createWarning').toggle('fast', function () {
                        // Animation complete.
                    });
                }
                else {
                    window.location.href = "/Restaurants/Create";
                }

            });
            $('#okButton').click(function () {
                $('#createWarning').toggle('fast', function () {
                    // Animation complete.
                });
            });
        });
    </script>

}
<div class="row">

    <div class="col-lg-3"></div>
    <div class="page-header col-lg-6" style="text-align:center">
        <h1>
            Welcome to your personal Restaurant Management console.

        </h1>
        <p>
            <button class="btn btn-info" id="createButton">Create New Restaurant</button>
        </p>
        <p>Your restaurants are displayed here. To view each restaurant in detail, edit or delete, use the provided buttons for each restaurant</p>
    </div>
    <div class="col-lg-3"></div>
</div>


<div id="createWarning" class="alert alert-warning" style="display:none; text-align:center">
    <h4>Sorry,</h4>
    <p>You already have a restaurant created. We're working hard to handle multiple restaurants from individual users</p>
    <input type="button" id="okButton" value="OK" class="btn btn-info" />
</div>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.restaurantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wheelchair)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vegan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.wifi)
        </th>
        <th>
            <label>Main style</label>
        </th>

        <th>
            @Html.DisplayNameFor(model => model.phoneNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.openClose)
        </th>
        <th style="text-align:center">Tools</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.restaurantName)
            </td>
            <td>
                @if (item.wheelchair)
                {
                    <span class="label label-success">Yes</span>
                }
                else
                {
                    <span class="label label-danger">No</span>
                }
            </td>
            <td>
                @if (item.vegan)
                {
                    <span class="label label-success">Yes</span>
                }
                else
                {
                    <span class="label label-danger">No</span>
                }
            </td>
            <td>
                @if (item.wifi)
                {
                    <span class="label label-success">Yes</span>
                }
                else
                {
                    <span class="label label-danger">No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.openClose)
            </td>
            <td style="text-align:center">
                <div class="btn-group" role="group">
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { id = "editButton", @class = "btn btn-info" })
                    @Html.ActionLink("Full Details", "Details", new { id = item.id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
                </div>
            </td>
        </tr>
    }

</table>




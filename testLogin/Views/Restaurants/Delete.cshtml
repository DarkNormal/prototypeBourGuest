@model testLogin.Models.Restaurant

@{
    ViewBag.Title = "Delete";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="text-align:center">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Restaurant</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.restaurantName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.restaurantName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.latitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.latitude)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.longitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.longitude)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.wheelchair)
                </dt>

                <dd>
                    @if (Model.wheelchair)
                    {
                        <span class="label label-success">Yes</span>
                    }
                    else
                    {
                        <span class="label label-danger">No</span>
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.vegan)
                </dt>

                <dd>
                    @if (Model.vegan)
                    {
                        <span class="label label-success">Yes</span>
                    }
                    else
                    {
                        <span class="label label-danger">No</span>
                    }
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.wifi)
                </dt>
                <dd>
                    @if (Model.wifi)
                    {
                        <span class="label label-success">Yes</span>
                    }
                    else
                    {
                        <span class="label label-danger">No</span>
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.type1)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.type1)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.type2)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.type2)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.type3)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.type3)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.bio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.bio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.openClose)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.openClose)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.phoneNum)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phoneNum)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div id="deleteWarning" class="alert alert-warning" style="display:none;">
                        <h4>Warning!</h4>
                        <p>Deleting your restaurant will delete all associated floorplans!</p>
                        <p>If there are any reservations for your restaurant, you must delete them first.</p>
                        <input type="submit" value="I know, delete restaurant" class="btn btn-danger" />
                        <input type="button" id="cancelDelete" value="Cancel" class="btn btn-info" />
                    </div>
                    <div class="btn-group">
                        @Html.ActionLink("Back to List", "Index", new { id = "backButton" }, new { @class = "btn btn-info" })
                        <input type="button" id="myButton" value="Delete" class="btn btn-danger" />
                    </div>


                </div>
            }
        </div>
    </div>
    <div class="col-md-4"></div>
</div>

@section Scripts{
    <script>
        $('#myButton').click(function () {
            $('#deleteWarning').toggle('slow', function () {
                // Animation complete.
            });
        });
        $('#cancelDelete').click(function () {
            $('#deleteWarning').toggle('slow', function () {
                // Animation complete.
            });
        });
    </script>
}

                <dd>
                    @Html.DisplayFor(model => model.type2)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.type3)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.type3)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.bio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.bio)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.openClose)
                </dt>

                <dd>

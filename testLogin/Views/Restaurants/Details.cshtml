                <dt>
                    @Html.DisplayNameFor(model => model.phoneNum)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phoneNum)
                </dd>

            </dl>
        </div>



        <p>
            <div class="btn-group" role="group">
                @Html.ActionLink("Back to List", "Index", new { id = "backButton" }, new { @class = "btn btn-info" })
                @Html.ActionLink("Edit", "Edit", new { id = Model.id }, new { id = "editButton", @class = "btn btn-primary" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.id }, new { @class = "btn btn-danger" })
            </div>
        </p>

    </div>
    <div class="col-md-4"></div>

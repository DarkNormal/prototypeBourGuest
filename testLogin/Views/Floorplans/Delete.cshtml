@model testLogin.Models.Floorplan

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Floorplan</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.height)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.height)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.width)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.width)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.numObjects)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numObjects)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <div id="deleteWarning" class="alert alert-warning" style="display:none;">
                <h4>Warning!</h4>
                <p>Deleting a floorplan cannot be un-done!</p>
                <p>If there are any reservations for this floorplan, you must delete them first.</p>
                <input type="submit" value="I know, delete floorplan" class="btn btn-danger" />
                <input type="button" id="cancelDelete" value="Cancel" class="btn btn-info" />
            </div>
            <div class="btn-group">
                @Html.ActionLink("Back to List", "Index", new { id = "backButton" }, new { @class = "btn btn-info" })
                <input type="button" id="myButton" value="Delete" class="btn btn-danger" />
            </div>
            }
        </div>

        @section Scripts{
            <script>
        $('#myButton').click(function () {
            $('#deleteWarning').toggle('slow', function () {
                // Animation complete.
            });
        });
        $('#cancelDelete').click(function () {
            $('#deleteWarning').toggle('slow', function () {
                // Animation complete.
            });
        });
            </script>
        }

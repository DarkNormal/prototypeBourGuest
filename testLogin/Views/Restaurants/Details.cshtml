@model testLogin.Models.Restaurant

@{
    ViewBag.Title = "Details";
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div>
            <h2>Details</h2>
            <h4>Restaurant</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.restaurantName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.restaurantName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.latitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.latitude)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.longitude)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.longitude)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.wheelchair)
                </dt>

                <dd>
                    @if (Model.wheelchair)
                    {
                        <span class="label label-success">Yes</span>
                    }
                    else
                    {
                        <span class="label label-danger">No</span>
                    }
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.vegan)
                </dt>

                <dd>
                    @if (Model.vegan)
                    {
                        <span class="label label-success">Yes</span>
                    }
                    else
                    {
                        <span class="label label-danger">No</span>
                    }
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.wifi)
                </dt>
                <dd>
                    @if (Model.wifi)
                    {
                        <span class="label label-success">Yes</span>
                    }
